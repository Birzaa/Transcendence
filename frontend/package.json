{
  "name": "ft_transcendence",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && npx tailwindcss -i ./src/style.css -o ./public/style.css",
    "dev": "concurrently \"tsc --watch\" \"npx tailwindcss -i ./src/style.css -o ./public/style.css --watch\"",
    "start": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chart.js": "^4.5.0"
  }
}
